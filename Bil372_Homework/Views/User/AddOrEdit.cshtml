@model Bil372_Homework.Models.Conference
@{
	Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Conference", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
		@Html.HiddenFor(model => model.ConfID)
	<div class="form-group">
		@Html.LabelFor(model => model.Name, new { @class = "control-label" })
		@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(model => model.Name)
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.ShortName, new { @class = "control-label" })
		@Html.EditorFor(model => model.ShortName, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(model => model.ShortName)
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.StartDate, new { @class = "control-label" })
		@Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.EndDate, new { @class = "control-label" })
		@Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.SubmisionDeadline, new { @class = "control-label" })
		@Html.EditorFor(model => model.SubmisionDeadline, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">

		@Html.LabelFor(model => model.CreatorUser, new { @class = "control-label" })
		<div class="input-group">
			<span class="input-group-addon">CreatorUser</span>
			@Html.EditorFor(model => model.CreatorUser, new { htmlAttributes = new { @class = "form-control" } })
		</div>
	</div>

	<div class="form-group">
		<input type="submit" value="Submit" class="btn btn-primary" />
		<input type="reset" value="Reset" class="btn" />
	</div>
}